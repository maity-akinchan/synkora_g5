# Database
DATABASE_URL="postgresql://user:password@localhost:5432/synkora?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# WebSocket Configuration
# Option 1: Use integrated WebSocket server (default)
# Leave NEXT_PUBLIC_WEBSOCKET_URL unset or empty
# NEXT_PUBLIC_WEBSOCKET_URL=""

# Option 2: Use standalone WebSocket server
# Set this to the URL of your standalone WebSocket server
# NEXT_PUBLIC_WEBSOCKET_URL="http://localhost:3001"

# Standalone WebSocket Server Config (for websocket-server.js)
WS_PORT=3001
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Feature Flags
# Set to "false" to disable integrated WebSocket in Next.js server
ENABLE_INTEGRATED_WEBSOCKET="true"

# AI API (OpenAI or Gemini)
OPENAI_API_KEY="your-openai-api-key"
# OR
GEMINI_API_KEY="your-gemini-api-key"

# Socket.io Server (for production)
SOCKET_SERVER_URL="http://localhost:3001"

# Encryption (for storing sensitive tokens)
ENCRYPTION_KEY="generate-a-32-character-key-here"
